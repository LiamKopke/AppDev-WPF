<Window x:Class="HomeBudgetWPF.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <StackPanel Background="{DynamicResource App.Background}">
        <TextBlock Foreground="{DynamicResource TextColor}" Text="OUR BUDGET APP BY MONKE" FontSize="24" FontWeight="Bold" TextAlignment="Center" FontFamily="Comic Sans MS" />
        <TextBlock Foreground="{DynamicResource TextColor}" Text="Expenses" HorizontalAlignment="Center" FontWeight="Bold"/>
        <DataGrid Background="{DynamicResource Alternation1}" Margin="20, 10, 20, 10" Height="250"></DataGrid>
        <Grid Height="25" Margin="20, 5, 20, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Style="{DynamicResource RoundedButton}" Grid.Column="0" Width="150" Content="Show Categories"/>
            <Button Style="{DynamicResource RoundedButton}" Grid.Column="1" Width="150" Content="Add Expense" Click="Add_Click"/>
        </Grid>
    </StackPanel>
</Window>
