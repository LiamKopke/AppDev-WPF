<Window x:Class="HomeBudgetWPF.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="20">Add Category</TextBlock>
        <TextBlock HorizontalAlignment="Center">Budget Items</TextBlock>
        <StackPanel>
</StackPanel>
        <ComboBox Width="125" Grid.Column="0" HorizontalAlignment="Center" Name="cmbCategories" IsEditable="True" KeyDown="cmbCategories_KeyDown" Text="Categories">
        </ComboBox>
        <ComboBox Width="125" Grid.Column="0" HorizontalAlignment="Center" Name="cmbCategoryTypes" IsEditable="True" SelectedIndex="0">
        </ComboBox>
        <Button Width="90" Content="Add Category" Click="btnAdd_Click"/>
    </StackPanel>
</Window>
